---
import navData from "../data/navData";
---

<header class="flex items-center justify-between p-4">
  <a href="/">
    <div class="flex items-center">
      <img class="h-10 px-2" src="/images/logo.png" alt="logo" />
      <p class="font-bold">Cabinet Dentaire</p>
    </div>
  </a>
  <nav class="items-center hidden md:flex">
    <ul class="flex flex-row">
      {
        navData.map((item) => (
          <li class="px-2">
            <a href={item.path} target="_blank">
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class="flex items-center md:hidden z-50">
    <input type="checkbox" id="menu-toggle" class="hidden" />
    <label for="menu-toggle" class="cursor-pointer">
      <svg
        class="w-6 h-6"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M4 18L20 18"
          stroke="#000000"
          stroke-width="2"
          stroke-linecap="round"></path>
        <path
          d="M4 12L20 12"
          stroke="#000000"
          stroke-width="2"
          stroke-linecap="round"></path>
        <path
          d="M4 6L20 6"
          stroke="#000000"
          stroke-width="2"
          stroke-linecap="round"></path>
      </svg>
    </label>
    <div
      class="hidden fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center"
      id="menu-overlay"
    >
      <div class="py-2 px-4 shadow rounded-md text-white text-4xl">
        <ul class="flex flex-col">
          {
            navData.map((item) => (
              <li class="py-4">
                <a href={item.path} target="_blank">
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuToggle = document.getElementById("menu-toggle");
    const menuOverlay = document.getElementById("menu-overlay");

    menuToggle.addEventListener("change", function () {
      if (menuToggle.checked) {
        menuOverlay.classList.remove("hidden");
      } else {
        menuOverlay.classList.add("hidden");
      }
    });

    // Fermer le menu en cliquant Ã  nouveau sur le burger
    menuOverlay.addEventListener("click", function () {
      menuToggle.checked = false;
      menuOverlay.classList.add("hidden");
    });
  });
</script>
