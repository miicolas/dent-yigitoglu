---
import Layout from "../layouts/Layout.astro";
import SocialMedia from "../components/socialMedia.astro";
---

<Layout title="Docteur Yigitoglu">
	<main>
		<div class="bg-blue-900 to-blue-500">
			<SocialMedia />
		</div>
		<section
			class="bg-gradient-to-r bg-blue-900 to-blue-500 text-white h-[90vh] flex justify-center items-center md:justify-normal">
			
			<div class="flex flex-col w-full md:flex-row">
				<div class="px-4 py-20  margin-auto  lg:w-1/2 md:ml-10 text-center">

					<p class="text-3xl font-bold mb-2">Thierry Yigitoglu</p>
					<p class="text-xl mb-4 text-gray-300">Cabinet dentaire situé à 
						<a href= "/" class="relative w-max one">
							<span>Paris</span>
							<span class="absolute -bottom-1 left-0 w-0 transition-all h-1 bg-blue-500"></span>
						</a>
					</p>

					
					<a href="/rdv">
						<div class="bg-blue-500 rounded-md py-2 px-4 object-fill inline-flex items-center">
						  <span class="mr-2">Prendre rendez-vous</span>
						  <svg
							class="ml-2"
							width="20px"
							height="20px"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						  >
							<title></title>
							<g id="Complete">
							  <g id="arrow-right">
								<g>
								  <polyline
									data-name="Right"
									fill="none"
									id="Right-2"
									points="16.4 7 21.5 12 16.4 17"
									stroke="#ffffff"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
								  ></polyline>
					  
								  <line
									fill="none"
									stroke="#ffffff"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									x1="2.5"
									x2="19.2"
									y1="12"
									y2="12"
								  ></line>
								</g>
							  </g>
							</g>
						  </svg>
						</div>
					  </a>
					  
				</div>

				<div class="flex justify-center mb-0 lg:w-1/2 ">
					<!-- <div class="toothbrush-object absolute ml-10">
						<img
							class="h-20 "
							src="/images/brossedent.png"
							alt=""
						/>
					</div> -->
					<div class="flex items-center justify-center">
						<div
							class="h-40 w-40 rounded-full border-gray-950 overflow-hidden bg-white shadow-xl hover:shadow-2xl transition ease-in-out duration-1000 lg:h-64 lg:w-64"
						>
							<img
								class="h-full w-full object-cover ml-3 lg:ml-6"
								src="/images/thierry-yigitoglu.png"
								alt=""
							/>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	.toothbrush-object {
		animation: object-floating 6s infinite ease-in-out alternate;
	}

	@keyframes object-floating {
		0% {
			transform: translateY(-30px);
		}
		100% {
			transform: translateY(30px);
		}
	}
	.one:hover span:last-child {
  width: 100%;
}
</style>
